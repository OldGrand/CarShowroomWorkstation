<Window x:Class="CarShowroomWorkstation.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarShowroomWorkstation"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/BackGround.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="EmaiLabel" FontSize="40" Grid.Column="1" Content="Email" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="EmailTextBox" Background="Azure" Grid.Column="1" Grid.Row="1" Height="50" Language="en-en" SpellCheck.IsEnabled="True" VerticalAlignment="Top" />

        <Label x:Name="PasswordLabel" FontSize="40" Grid.Column="1" Grid.Row="2" Content="Password" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="PasswordTextBox" Background="Azure" Grid.Column="1" Grid.Row="3" Height="50" Language="ru-ru" SpellCheck.IsEnabled="True" VerticalAlignment="Top"/>

        <Button x:Name="AcceptButton" Grid.Column="1" Grid.Row="4" VerticalAlignment="Top" FontSize="20" Width="150" Content="Войти" />
        <Button x:Name="RegistrationButton" Grid.Column="1" Grid.Row="4" VerticalAlignment="Top" FontSize="20" Width="150" Content="Регистрация" Margin="0 35 0 5"/>
    </Grid>
</Window>
